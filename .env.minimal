# AI/LLM Configuration - ADJUST THESE for your setup
# Option 1: Use OpenAI API (commented out for local setup)
# OPENAI_API_KEY=$OPENAI_API_KEY
# LLM_API_KEY=$OPENAI_API_KEY
# OPENAI_BASE_URL=https://api.openai.com/v1

# Option 2: Use local Ollama (enabled for minimal setup)
OPENAI_BASE_URL=http://localhost:11434/v1
OPENAI_API_KEY=ollama

# Option 3: Use DeepSeek (as configured in cloud-pipeline-handler)
# OPENAI_BASE_URL=https://api.deepseek.com/v1
# OPENAI_API_KEY=your_deepseek_api_key

# Embedding Configuration
# Using local Ollama for embeddings
EMBEDDING_SERVER_ORIGIN="http://localhost:11434"
EMBEDDING_SERVER_ORIGIN_BGEM3=""
RERANKER_SERVER_ORIGIN=""

# Performance and Features
UNLIMITED=true
REDIS_CONNECTIONS=2
RUST_LOG=INFO
BM25_ACTIVE=true
QUANTIZE_VECTORS=false
REPLICATION_FACTOR=1  # Reduced for minimal setup

# Disabled Services (commented out to reduce complexity)
# CLICKHOUSE_URL=""           # No analytics
# STRIPE_SECRET=""            # No billing  
# OIDC_CLIENT_ID=""           # No web auth
# OIDC_CLIENT_SECRET=""       # API keys only
# SMTP_RELAY=""               # No email notifications

# Timeouts and Limits
BATCH_CHUNK_LIMIT=120
CHAT_COMPLETION_TIMEOUT_SECS=10
HIGHLIGHT_TIMEOUT_MS=500

# Vector sizes supported
VECTOR_SIZES="384,512,768,1024,1536,3072"

# PDF Processing
